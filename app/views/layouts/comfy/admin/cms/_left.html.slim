ul.navigation
  - if @site && !@site.new_record?
    - if can? :manage, :layouts
      li
        .label Website
      li
        a.cms-files-open-modal
          i.block.layout.icon
        = active_link_to t('comfy.admin.cms.base.layouts'), comfy_admin_cms_site_layouts_path(@site)

    - if can? :manage, :pages
      li
        a.cms-files-open-modal
          i.file.icon
