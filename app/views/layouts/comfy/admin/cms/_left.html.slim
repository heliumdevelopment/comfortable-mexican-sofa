    - if can? :manage, :snippets
      li
        a.cms-files-open-modal
          i.cubes.icon
        = active_link_to t('comfy.admin.cms.base.snippets'), comfy_admin_cms_site_snippets_path(@site)

    - if can? :manage, :files
      li
        a.cms-files-open-modal
          i.folder.open.icon
        = active_link_to t('comfy.admin.cms.base.files'), comfy_admin_cms_site_files_path(@site)
    - if can? :read, :users
     li
       a.cms-files-open-modal
         i.users.icon
       = active_link_to 'Users', :comfy_users

